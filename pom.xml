  <modelVersion>4.0.0</modelVersion>
  <groupId>SocialNorm</groupId>
  <artifactId>SocialNorm</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <finalName>${warname}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.0.0</version>
 	    <configuration>
	    	<warSourceDirectory>${project.basedir}/target/${warname}</warSourceDirectory>
 	    </configuration>
      </plugin>
      <plugin>
   <groupId>com.google.cloud.tools</groupId>
   <artifactId>appengine-maven-plugin</artifactId>
   <version>1.3.2</version>
</plugin>
    </plugins>
    <resources>
    	<resource>
             <directory>src/main/java</directory>
             <excludes>
                <exclude>**/*.java</exclude>
                <exclude>**/config.properties</exclude> 
                <exclude>**/web.xml</exclude>
                <exclude>**/log4j.xml</exclude>
              </excludes>
      	</resource>
      	<resource>
             <directory>WebContent</directory>
             <targetPath>${project.basedir}/target/${warname}</targetPath>
             <includes>
                <include>**/WEB-INF/layouts/**</include>
                <include>**/WEB-INF/pages/**</include>
                <include>**/WEB-INF/applicationConfiguration.xml</include>
              </includes>
     	</resource>
     </resources>
  </build>
